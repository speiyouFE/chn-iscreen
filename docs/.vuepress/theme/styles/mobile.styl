@require './config'

$mobileSidebarWidth = $sidebarWidth * 0.82

// narrow desktop / iPad
@media (max-width: $MQNarrow)
  .pageHome
    background-image none
  .sidebar
    font-size 15px
    width $mobileSidebarWidth
  .page
    padding-left $mobileSidebarWidth
    padding-top $navbarHeight
    padding-bottom 0
  .content:not(.custom)
    padding 1.5rem
    border-radius 0px
    border 0px solid $borderColor
  .content:not(.custom) > *:first-child
    padding-top 1.6rem
  .no-sidebar 
    .content:not(.custom)
      padding 1.5rem
      border-radius 0px
      border 0px solid $borderColor
    .sidebar-links
      display none
// wide mobile
@media (max-width: $MQMobile)
  .sidebar
    top 0
    padding-top $navbarHeight
    transform translateX(-100%)
    transition transform .2s ease
  .page
    padding-left 0
  .theme-container.sidebar-open
    .sidebar
      transform translateX(0)

// narrow mobile
@media (max-width: $MQMobileNarrow)
  .home
    border-radius: 0px;
    border: 0px solid #ebeef5;
  .pageHome
    background-image none
    padding 0
  .page
    padding-top $navbarHeight
    padding-bottom 0
  h1
    font-size 1.9rem
  .content:not(.custom)
    padding 1.5rem
    border-radius 0px
    border 0px solid $borderColor
  .content
    pre, pre[class*="language-"]
      margin 0.85rem -1.5rem
      border-radius 0
  .content:not(.custom) > *:first-child
    padding-top 1.6rem
  .no-sidebar 
    .page
      padding-top $navbarHeight
      padding-bottom 0
    .sidebar-links
      display none